{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["DOM",  "ES2023"],
    "jsx": "react-jsx",
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@utils/*":["./src/utils/*"],
      "@types":["./src/types.d.ts"]
    }
  },
  "include": ["src/**/*"]
}
